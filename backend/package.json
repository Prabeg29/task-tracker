{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "rimraf lib && npx tsc -p .",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" src/index.ts",
    "start:prod": "yarn build && node ./lib/index.js",
    "knex": "node_modules/.bin/knex",
    "make:migration": "yarn knex migrate:make --knexfile src/knexfile.ts",
    "migrate": "yarn knex migrate:latest --knexfile src/knexfile.ts",
    "migrate:rollback": "yarn knex migrate:rollback --knexfile src/knexfile.ts",
    "make:seed": "yarn knex seed:make --knexfile src/knexfile.ts",
    "seed": "yarn knex seed:run --knexfile src/knexfile.ts",
    "test": "NODE_ENV=test jest -i --verbose --forceExit --detectOpenHandles"
  },
  "dependencies": {
    "ajv": "^8.14.0",
    "ajv-formats": "^3.0.1",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "mysql2": "^3.10.0",
    "pino": "^9.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.13.0",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.2",
    "pino-pretty": "^11.1.0",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
